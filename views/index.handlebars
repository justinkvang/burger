<h1>EAT-DA-BURGER!</h1>

<div class="row">
  <div class="column" id="column1">
    <h2>Devoured Burgers!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
    <div class="column" id="column2">
    <h2>Waiting to be devoured...</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Devoured!<br>
    <input type="radio" name="devoured" value="1"> Cooking...
  </div>

  <button type="submit">Add Burger</button>
</form>
